# Azure OpenAI Configuration
# Uses Entra ID (Azure AD) authentication - run `az login` before using
AZURE_OPENAI_ENDPOINT="https://your-openai-resource.openai.azure.com/"
AZURE_MODEL_NAME="gpt-5-mini"  # Your model deployment name

# Azure AI Search Configuration
AI_SEARCH_ENDPOINT="https://your-search-service.search.windows.net"
AI_SEARCH_INDEX_NAME="your-index-name"

# Optional: API key for Azure AI Search (leave empty to use Entra ID auth)
AI_SEARCH_API_KEY=""

# Optional: Semantic configuration name (for semantic ranking)
AI_SEARCH_SEMANTIC_CONFIG="your-semantic-config-name"

# Optional: Vector field name (for hybrid vector search with integrated vectorization)
AI_SEARCH_VECTOR_FIELD="text_vector"
